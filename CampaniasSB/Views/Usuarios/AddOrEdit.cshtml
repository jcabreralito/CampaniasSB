@model CampaniasSB.Models.Usuario
@{
}

@using (Html.BeginForm("AddOrEdit", "Usuarios", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.UsuarioId)

    <div class="input-field col s12">
        @Html.EditorFor(model => model.NombreUsuario, new { htmlAttributes = new { @type = "text", @class = "validate", @required = "true" } })
        <label for="NombreUsuario">Usuario</label>
    </div>

    <div class="input-field col s12">
        @Html.EditorFor(model => model.Nombres, new { htmlAttributes = new { @type = "text", @class = "validate", @required = "true" } })
        <label for="Nombres" class="active">Nombres</label>
    </div>

    <div class="input-field col s12">
        @Html.EditorFor(model => model.Apellidos, new { htmlAttributes = new { @type = "text", @class = "validate", @required = "true" } })
        <label for="Apellidos" class="active">Apellidos</label>
    </div>

    <div class="form-group focus">
        <label for="CompañiaId" style="padding: 0 0 0 10px;">Compañia</label>
        <div class="customselect">
            @Html.DropDownList("CompañiaId", null, ((IList<ModelMetadata>)ViewData.ModelMetadata.Properties)[5].Watermark, htmlAttributes: new { @class = "form-control form-control-select clgfocus", @type = "text", @required = "true", style = "text-transform: uppercase", @oninvalid = "setCustomValidity('Seleccionar un elemento de la lista')", @oninput = "setCustomValidity('')" })
        </div>
        <span class="focus-border"></span>
    </div>

    <div class="form-group focus">
        <label for="RolId" style="padding: 0 0 0 10px;">Rol</label>
        <div class="customselect">
            @Html.DropDownList("RolId", null, ((IList<ModelMetadata>)ViewData.ModelMetadata.Properties)[4].Watermark, htmlAttributes: new { @class = "form-control form-control-select clgfocus", @type = "text", @required = "true", style = "text-transform: uppercase", @oninvalid = "setCustomValidity('Seleccionar un elemento de la lista')", @oninput = "setCustomValidity('')" })
        </div>
        <span class="focus-border"></span>
    </div>

    <div class="center-align">
        <button type="submit" title="Aceptar" class="btn-floating btn-sm green" style="border-radius: 50%" onclick="hidePage()">
            <i class="large material-icons">check</i>
        </button>

        @*<button type="reset" title="Reset" class="btn-floating btn-sm green" style="border-radius: 50%">
                <i class="large material-icons">arrow_back</i>
            </button>*@
    </div>
}

